<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.imuxuan.enbubble.view.sheet.widget.FreeGrowUpParent
        android:id="@+id/freeGrowUpParentF"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sheet_height"
        android:layout_gravity="bottom"
        app:offset="@dimen/arc_max_height">

        <com.imuxuan.enbubble.view.sheet.widget.SweetView
            android:id="@+id/sv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <com.imuxuan.enbubble.view.sheet.widget.IndicatorView
            android:id="@+id/indicatorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp" />

        <com.imuxuan.enbubble.view.sheet.sweetpick.CustomViewPager
            android:id="@+id/vp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="70dp"
            android:clipChildren="false"
            android:layoutAnimation="@anim/rv_layout_animation"
            android:overScrollMode="never" />

        <com.imuxuan.enbubble.view.sheet.widget.CRImageView
            android:id="@+id/sliderIM"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:padding="10dp"
            android:src="@drawable/ic_slider_line" />

    </com.imuxuan.enbubble.view.sheet.widget.FreeGrowUpParent>
</FrameLayout>